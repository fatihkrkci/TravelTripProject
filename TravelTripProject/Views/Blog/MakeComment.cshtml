<div class="content-form">
    <h3>Bir Yorum Yapın</h3>
    <form method="post">
        <input type="hidden" placeholder="Kullanıcı Adı" name="BlogID" value="@ViewBag.value" required />
        <input type="text" placeholder="Kullanıcı Adı" name="Username" required />
        <input type="text" placeholder="Mail Adresi" name="Email" required />
        <textarea placeholder="Yorum" name="FullComment"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>