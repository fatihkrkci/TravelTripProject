@using TravelTripProject.Models.Entities
@model List<Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.ImageURL" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.CreatedAt.ToString("dd.MM.yyyy")</span>
                <p>@item.Description.Substring(0, 75)...</p>
                <p><a href="/Blog/BlogDetail/@item.BlogID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("ThirdFromTheLastBlog", "Default")
    <div class="clear"></div>
</div>